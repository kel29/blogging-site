
<div class="wrapper">
  <div class="container">
    <header class="blog-header py-3">
    </header>
      
    <!-- Most liked post -->
    <div class="jumbotron p-4 p-md-5 test-white rounded bd-dark">
      <div class="col-md-6 px-0">
        <h1 class="display-4 font-italic"><%= @featured.title %></h1>
        <p class="lead my-3">This will be the blog subtitle</p>
        <p class="lead mb-0">
          <a href="<% blog_path(@featured) %>" class="text-white font-weight-bold">Continue reading... (need to fix link to post)
        </p>
      </div>
    </div>

    <!-- <div class="row md-1"> -->
      <!-- Most recent posts -->
    <% @most_recent.each do |blog| %>
      <div class="row no-gutters border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
        <div class="col p-4 d-flex flex-column position-static">
          <strong class="d-inline-block mb-2 text-primary">#first #three #tags</strong>
          <h3 class="mb-0"><%= blog.title %></h3>
          <div class="mb-1 text-muted">MM/DD</div>
          <p class="card-text mb-auto">This will be the blog subtitle</p>
          <a href="<% blogs_path(blog)%>" class="text-white font-weight-bold">Continue reading... (need to fix link to post)</a>
        </div>
        <div class="col-auto d-none d-lg-block">
          <svg class="bd-placeholder-image" width="200" height="250" xmlns="http://www.w3.org/200/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="placeholder">
            <title>Placeholder</title>
            <rect width="100%" height="100%" fill="#02111B"></rect>
            <text x="25%" y="50%" fill="#7CFFC4" dy=".3em">Thumbnail</text>
          </svg>
        </div>
      </div>
    <% end %>

    <!-- </div> -->
  </div>
  

  <main rols="main" class="container">
    <% if flash[:search_error] %>
      <div class="alert alert-danger" role="alert">
        <%= flash[:search_error] %>
      </div>
    <% end %>

    <%= form_tag blogs_path, method: 'get' do %>
      <%= label_tag :query, "Search through blog posts by tag:" %>
      <%= text_field_tag :query %>
      <%= submit_tag "search" %>
    <% end %>

    <ul>
      <% @rest_of_the_blogs.each do |blog| %>
        <li><%= link_to blog.title, blog %></li>
      <% end %>
    </ul>
  </main>

  <footer class="blog-footer">
    <p>Built by Krista</p>
  </footer>

  </div>
</div>
