
<% if flash[:login_error] %>
  <div class="alert alert-danger" role="alert">
    <%= flash[:login_error] %>
  </div>
<% end %>

<%= form_with url: login_path do |f| %>
  <%= f.label 'Username:' %>
  <%= f.text_field :name %>
  <%= f.label "Email:" %>
  <%= f.text_field :email %>
  <%= f.label 'Password:' %>
  <%= f.password_field :password %>  
  <%= f.submit "Login" %>  
<% end %>